{
  "name": "movegh",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:db": "docker compose -f services/db/docker-compose.yml up -d",
    "dev:api": "pnpm --filter movegh-api dev",
    "dev:rider": "pnpm --filter movegh-rider dev",
    "dev:driver": "pnpm --filter movegh-driver dev",
    "dev:business": "pnpm --filter movegh-business dev",
    "dev:admin": "pnpm --filter movegh-admin dev",
    "dev:stack": "concurrently -k -n db,api,rider \"pnpm dev:db\" \"pnpm dev:api\" \"pnpm dev:rider\"",
    "docker:up": "docker compose -f infra/docker-compose.yml up -d",
    "docker:down": "docker compose -f infra/docker-compose.yml down",
    "docker:logs": "docker compose -f infra/docker-compose.yml logs -f --tail=200",
    "docker:reset": "bash scripts/confirm-reset.sh && docker compose -f infra/docker-compose.yml down -v",
    "check:urls": "bash scripts/check-urls.sh",
    "check:env": "node scripts/check-env.mjs",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier -w .",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "turbo": "^2.1.3",
    "typescript": "^5.6.3"
  }
}
